{
  "name": "purescript-halogen-training",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "spago install",
    "build": "spago build",
    "watch": "spago build --watch",
    "clean": "rm -rf node_modules output .spago dist/* *.lock",
    "bundle": "spago bundle-app --main Main --to dist/app.js && parcel build assets/index.html",
    "serve": "yarn bundle && http-server dist",
    "test": "spago test"
  },
  "author": "Koji Ishimoto",
  "license": "MIT",
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "purescript": "^0.13.6",
    "spago": "^0.14.0"
  },
  "dependencies": {
    "http-server": "^0.12.1"
  }
}
